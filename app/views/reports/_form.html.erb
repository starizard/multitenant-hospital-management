<br/>
<div class="row">
      <div class="col s6"><%=@report.doctor.name %>
        <p><%=@report.doctor.position%></p>
        <%=@report.doctor.department.dname%>
      </div>
      <div class="col s4"></div>
      <div class="col s2">
      <b>Date: </b><%=@report.pdate.strftime("%d %B %Y")%>
      <p><b>Time: </b><%=@report.ptime.strftime("%H:%M") %></p>

      </div>
</div>
<p><b>Patient name: </b><%= @report.user.name %></p>
<p><b>Patient id: </b><%= "#"+@hname.slice(0,3).upcase+"PNT"+@report.user.id.to_s %></p>

<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :notes %>
    <%= f.input :prescription %>
    <div style="display: none;">
        <%= f.association :user%>
        <%= f.association :doctor%>
        <%= f.input :pdate %>
        <%= f.input :ptime %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
