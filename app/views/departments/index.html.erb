<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Dname</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.dname %></td>
        <td><%= department.description %></td>
        <td><%= link_to 'Show', department %></td>
 
      </tr>
    <% end %>
  </tbody>
</table>

