<style type="text/css">
  @media print{
    .printme , header, input, th, .meta span, p, aside h1{
      
      margin-right: 5vw;
    }
    .printme b{
      font-size:20px;
    }
   .printme{
    position: fixed;
    padding: 0px 0px 0px 0px;
    visibility: true;
    transform: scale(1.00,1.0);
   }
   nav,.nav-wrapper,.purple{
    display:none;
   }
   header h1{
    background: #4A148C !important;
   }
   button,.btn-large{
    display:none;
   }
  }
.printme{
  background: white;
  padding: 50px 50px 50px 50px;
}

</style>
<%= javascript_include_tag "invoices" %>
<div class="printme" id="prints">
  

<%= render 'invoice' %>


</div>
<hr>
<%= simple_form_for(@invoice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" >
    <div style="display: none">
      <%= f.input :user %>
      <%= f.input :doctor %>
      <%= f.input :amount %>
      <%= f.input :invoice_number %>
      <%= f.input :notes %>
    </div>
</div>
  <div class="form-actions">
    <%= f.button :submit,class: 'btn-large ', :label=> 'Store Invoice' %>
  </div>

<% end %>

<br/>
<button href="#" onclick= "printDiv();return false;" class="waves-effect waves-light btn-large green ">PRINT</button>
